<?xml version="1.0" encoding="UTF-8"?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Tec's Assorted Patches</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_CampingTent"]/defNames</xpath>
      <value>
        <li>AshlandYurt</li>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Morrowrim Ashlander Yurts</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>

        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName = "AshlandYurt"]/costList</xpath>
          <value>
            <costList>
              <WoodPlank>30</WoodPlank>
            </costList>
          </value>
        </li>

        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="AshlandYurt"]/researchPrerequisites</xpath>
          <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="AshlandYurt"]/researchPrerequisites</xpath>
            <value>
              <researchPrerequisites>
                <li>Beds_B1</li>
              </researchPrerequisites>
            </value>
          </match>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="AshlandYurt"]</xpath>
            <value>
              <researchPrerequisites>
                <li>Beds_B1</li>
              </researchPrerequisites>
            </value>
          </nomatch>
        </li>

        <li Class="PatchOperationReplace">
          <xpath>Defs/ThoughtDef[defName = "Yurtbuff"]/stages/li[1]/baseMoodEffect</xpath>
          <value>
            <baseMoodEffect>2</baseMoodEffect>
          </value>
        </li>

      </operations>
    </match>
  </Operation>

</Patch>
