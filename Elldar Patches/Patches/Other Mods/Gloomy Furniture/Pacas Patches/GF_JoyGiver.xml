<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
			<li>GloomyFurniture</li>
            <li>GloomyFurniture (Continued)</li>
        </mods>
		
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>*/JoyGiverDef[defName="Play_Chess"]/thingDefs</xpath>
					<value>
						<li>GL_ChessTable</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>*/JoyGiverDef[defName="Play_Poker"]/thingDefs</xpath>
					<value>
						<li>GL_PokerTable</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>*/JoyGiverDef[defName="Play_Billiards"]/thingDefs</xpath>
					<value>
						<li>GL_BilliardsTable</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>*/JoyGiverDef[defName="WatchTelevision"]/thingDefs</xpath>
					<value>
						<li>GL_TubeTelevision</li>
					</value>
				</li>			
			</operations>
		</match>	
	</Operation>
</Patch>
