<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vile's Wood You Please</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
			
				<li Class="PatchOperationRemove">
					<xpath>Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_Lights"]/defNames/li[.="Hearth"]</xpath>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_Lights"]/defNames/li[.="OpenHearth"]</xpath>
				</li> 
					
				<li Class="PatchOperationAdd">
					<xpath>Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_Stove"]/defNames</xpath>
					<value>
						<li>Hearth</li>
						<li>OpenHearth</li>
					</value>
				</li>
			  
			</operations>
		</match>
    </Operation>
</Patch>