<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <Operation Class="PatchOperationReplace" MayRequire="spoonshortage.rimkea">
    <xpath>Defs/TerrainDef[@Name="RIKStoneFloorBase"]/designationCategory</xpath>
    <value>
      <designationCategory>NaturalFloors</designationCategory>
    </value>
  </Operation>
  
  <Operation Class="PatchOperationReplace" MayRequire="spoonshortage.rimkea">
    <xpath>Defs/TerrainDef[@Name="RIKWoodFloorBase"]/designationCategory</xpath>
    <value>
      <designationCategory>Floors</designationCategory>
    </value>
  </Operation>
  
  <Operation Class="PatchOperationAdd" MayRequire="spoonshortage.rimkea">
    <xpath>Defs/TerrainDef[@Name="RIKWoodFloorBase"]</xpath>
    <value>
      <researchPrerequisites>
		<li>Wooden_floor_A1</li>
	  </researchPrerequisites>
    </value>
  </Operation>
  
  <Operation Class="PatchOperationAdd" MayRequire="spoonshortage.rimkea">
    <xpath>Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_PrimitiveWoodFloors"]/defNames</xpath>
    <value>
      <li>Floor_DarkPlanks</li>
	  <li>Floor_LightPlanks</li>
    </value>
  </Operation>
  
  <Operation Class="PatchOperationAdd" MayRequire="spoonshortage.rimkea">
    <xpath>Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_WoodFloors"]/defNames</xpath>
    <value>
	  <li>Floor_SmoothWood</li>
    </value>
  </Operation>
  
</Patch>