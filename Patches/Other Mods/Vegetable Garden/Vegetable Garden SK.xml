<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- Remove duplicate -->

	<Operation Class="PatchOperationRemove" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/ThingDef[defName="VG_FishTrap" or defName="VG_Campfire"]</xpath>
	</Operation> 
	
  <!-- Architect Sense -->

	<Operation Class="PatchOperationAdd" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_Lights"]/defNames</xpath>
		<value>
			<li>VG_TorchLamp</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_Containers"]/defNames</xpath>
		<value>
			<li>VG_FoodShelf</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_PlantPots"]/defNames</xpath>
		<value>
			<li>PlantPot_BambooBonsai</li>
			<li>PlantPot_Bonsai</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_PrimitiveWoodFloors"]/defNames</xpath>
		<value>
			<li>BambooFloor</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_WoodFloors"]/defNames</xpath>
		<value>
			<li>IronwoodFloor</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_SpecialFoods"]/defNames</xpath>
		<value>
			<li>VG_JellyFarm</li>
		</value>
	</Operation>

  <!-- Add Hay to grass products -->

	<Operation Class="PatchOperationAdd" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/ThingDef[defName="Plant_VGChokevine" or defName="Plant_VG_Grass" or defName="Plant_VGTallGrass" or defName="Plant_VG_CaveGrass"]/plant</xpath>
		<value>
			<harvestedThingDef>Hay</harvestedThingDef>
			<harvestYield>2</harvestYield>
		</value>
	</Operation>

  <!-- Universal Fermenter -->
  
	<Operation Class="PatchOperationAttributeAdd" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/RecipeDef[defName="MakeChemfuelFromBamboo" or defName="VG_MakeBiofuel"]</xpath>
		<attribute>ParentName</attribute>
		<value>GlitterpediaModExtBase</value>
	</Operation>
	
	<Operation Class="PatchOperationAttributeAdd" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/RecipeDef[defName="MakeChemfuelFromBamboo" or defName="VG_MakeBiofuel"]</xpath>
		<attribute>Class</attribute>
		<value>UniversalFermenterSK.RecipeDef_UF</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/RecipeDef[defName="MakeChemfuelFromBamboo" or defName="VG_MakeBiofuel"]</xpath>
		<value>
			<ruinedIfNoPowerOrNoFuelOrFlickedOffPerHour>5</ruinedIfNoPowerOrNoFuelOrFlickedOffPerHour>
			<usesTemperature>false</usesTemperature>
			<processDays>1.5</processDays>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationRemove" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/RecipeDef[defName="MakeChemfuelFromBamboo" or defName="VG_MakeBiofuel"/effectWorking</xpath>
	</Operation>
	<Operation Class="PatchOperationRemove" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/RecipeDef[defName="MakeChemfuelFromBamboo" or defName="VG_MakeBiofuel"/jobString</xpath>
	</Operation>
	<Operation Class="PatchOperationRemove" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/RecipeDef[defName="MakeChemfuelFromBamboo" or defName="VG_MakeBiofuel"/soundWorking</xpath>
	</Operation>
	<Operation Class="PatchOperationRemove" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/RecipeDef[defName="MakeChemfuelFromBamboo" or defName="VG_MakeBiofuel"/workAmount</xpath>
	</Operation>
	<Operation Class="PatchOperationRemove" MayRequire="dismarzero.VGP.VGPVegetableGarden">
		<xpath>Defs/RecipeDef[defName="VG_MakeBiofuel"]/workSkill</xpath> 
	</Operation> 
	
</Patch>