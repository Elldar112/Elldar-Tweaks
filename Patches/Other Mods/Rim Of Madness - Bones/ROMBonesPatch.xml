<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Rim of Madness - Bones</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>

	<!-- Architect Sense -->
		
		<li Class="PatchOperationAdd">
          <xpath>Defs</xpath>
          <value>
			<ArchitectSense.DesignationSubCategoryDef>
				<defName>ROM_BoneFloors</defName>
				<label>Bone Floors</label>
				<description>Floors made of bones - spooky.</description>
				<defNames>
					<li>BoneFloor</li>
					<li>BoneFloor_Blackened</li>
					<li>BoneChinaFloor</li>
					<li>BoneFloor_Ashen</li>
					<li>BoneFloor_Tile</li>
				</defNames>
				<designationCategory>OutsideFloors</designationCategory>
				<debug>false</debug>
			</ArchitectSense.DesignationSubCategoryDef>
          </value>
        </li>
		
        <li Class="PatchOperationAdd">
          <xpath>Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_Seats"]/defNames</xpath>
          <value>
            <li>BoneChair</li>
            <li>BoneThrone</li>
          </value>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_Walls"]/defNames</xpath>
          <value>
            <li>BoneWall</li>
          </value>
        </li>
		

        <li Class="PatchOperationRemove">
          <xpath>Defs/ThingDef[@Name="DarkThroneBase"]/designatorDropdown</xpath>
        </li>

		<li Class="PatchOperationRemove">
          <xpath>Defs/TerrainDef[defName="BoneFloor"
		  or defName="BoneFloor_Blackened"
		  or defName="BoneChinaFloor"
		  or defName="BoneFloor_Ashen"
		  or defName="BoneFloor_Tile"]
		  /designatorDropdown</xpath>
        </li>
		
      </operations>
    </match>
  </Operation>

</Patch>
